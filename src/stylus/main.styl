$pathcolor = #555;
$labelOnColor = rgba(100,100,100,1);
$labelOffColor = rgba(50,50,50,0.5);
$strokeColor = rgba(50,50,50,0.5);
$radioWidth = 35px;
$radioHeight = 35px;

.ac-custom ul,
ul.ac-custom,
ol.ac-custom,
.ac-custom ol
	list-style: none
	padding: 0
	margin: 0 auto
	max-width: 800px

.ac-custom li
	margin: 0 auto
	padding: 1em 0
	position: relative

.svgRadioList li
	width 50%
	float left

.ac-custom label
	display: inline-block
	position: relative
	font-size: 2em
	padding: 0 0 0 80px
	vertical-align: top
	color: $labelOffColor
	cursor: pointer
	-webkit-transition: color 0.3s
	transition: color 0.3s

.ac-custom input[type="checkbox"],
.ac-custom input[type="radio"],
.ac-custom label::before 
	width: $radioWidth
	height: $radioHeight
	top: 50%
	left: 0
	margin-top: -15px
	position: absolute
	cursor: pointer

.ac-custom input[type="checkbox"],
.ac-custom input[type="radio"] {
	opacity: 0;
	-webkit-appearance: none;
	display: inline-block;
	vertical-align: middle;
	z-index: 100;
}

.ac-custom label::before {
	content: '';
	border: 3px solid $strokeColor;
	-webkit-transition: opacity 0.3s;
	transition: opacity 0.3s;
}

.ac-radio label::before {
	border-radius: 50%;
}

.ac-custom input[type="checkbox"]:checked + label,
.ac-custom input[type="radio"]:checked + label {
	color: $labelOnColor;
} 

.ac-custom input[type="checkbox"]:checked + label::before,
.ac-custom input[type="radio"]:checked + label::before {
	opacity: 0.8;
}

/* General SVG and path styles */

.ac-custom svg {
	position: absolute;
	width: $radioWidth;
	height: $radioHeight;
	top: 50%;
	margin-top: -17px;
	left: 2px;
	pointer-events: none;
}

.ac-custom svg path {
	stroke: $pathcolor;
	stroke-width: 13px;
	stroke-linecap: round;
	stroke-linejoin: round;
	fill: none;
}

/* Specific input, SVG and path styles */

/* Circle */
.ac-circle input[type="checkbox"],
.ac-circle input[type="radio"],
.ac-circle label::before {
	width: 30px;
	height: 30px;
	margin-top: -15px;
	left: 10px;
	position: absolute;
}

.ac-circle label::before {
	background-color: $labelTextColor;
	border: none;
}

.ac-circle svg {
	width: $radioWidth;
	height: $radioHeight;
	margin-top: -35px;
	left: -10px;
}

.ac-circle svg path {
	stroke-width: 5px;
} 

/* Box Fill */
.ac-boxfill svg path {
	stroke-width: 8px;
} 

/* Swirl */
.ac-swirl svg path {
	stroke-width: 8px;
}

/* List */
.ac-list ol {
	list-style: decimal;
	list-style-position: inside;
}

.ac-list ol li {
	font-size: 2em;
	padding: 1em 1em 0 2em;
	text-indent: -40px;
}

.ac-list ol li label {
	font-size: 1em;
	text-indent: 0;
	padding-left: 30px;
}

.ac-list label::before {
	display: none;
}

.ac-list svg {
	width: 100%;
	height: 80px;
	left: 0;
	top: 1.2em;
	margin-top: 0px;
}

.ac-list svg path {
	stroke-width: 4px;
}

/* Media Queries */
@media screen and (max-width: 50em) {
	section {
		font-size: 80%;
	}
}


label.myLabel
	position relative
	display inline-block
	float left
	width 25%
	img
		max-width 100%
		padding 0.8em
	h3
		display block
		position absolute
		max-width 80%
		font-size 1em
		top 50%
		margin 0 auto

label.myLabel > input
	visibility hidden
  position absolute

label.myLabel > input + img
	cursor pointer
	border-radius 2.618em
	border 0px solid transparent
	transition all ease-in-out 400ms
	opacity 0.5
	&:hover
		opacity 0.7
label.myLabel > input:checked + img /* (RADIO CHECKED) */
	border 0px solid #222
	opacity 1

.centered
	text-align center
	
.formStep
	display none
	&.currentStep
		display block